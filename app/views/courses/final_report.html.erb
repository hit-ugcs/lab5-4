<div class="row">
  <h1 class="text-center">Grading Sheet</h1>
</div>
<hr class="style-eight">

<div class="row">
  <div class="col-md-3">

    <div class="list-group">
      <a href="/courses/1/grade_configuration" class="list-group-item">
        1. Grade Configuration
      </a>
      <a href="/courses/1/grade_students" class="list-group-item">
        2. Grade Students
      </a>
      <a href="/courses/1/final_report" class="list-group-item active">
        3. Final Report
      </a>
    </div>
  </div>
  <div class="col-md-8">
    <% order = @partition.keys.sort %>
    <% order.each do |k| %>
      <div class="row">
        <h1><%= k %></h1>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>HIT ID</th>
              <th>Name</th>
              <th>Nickname</th>
              <th>Grade</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @partition[k].each do |user| %>
              <%= render partial: 'users/list.html.erb', locals: {user: user, course_id: params[:id]} %>
            <% end if @partition[k] %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

