<div class="row">
  <h1 class="text-center">Grading Sheet</h1>
</div>
<hr class="style-eight">

<div class="row">
  <div class="col-md-3">

    <div class="list-group">
      <a href="/courses/1/grade_configuration" class="list-group-item">
        1. Grade Configuration
      </a>
      <a href="/courses/1/grade_students" class="list-group-item  active">
        2. Grade Students
      </a>
      <a href="/courses/1/final_report" class="list-group-item">
        3. Final Report
      </a>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row">
      <%= link_to 'New Student', new_course_user_path(@course), class: 'btn btn-primary' %>
    </div>
    <hr>
    <div class="row">
      <% if @user_info %>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Nickname</th>
              <th>Student ID</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @user_info.each_with_index do |user, index| %>
              <tr>
                <td><%= index %></td>
                <td><%= user.name %></td>
                <td><%= user.nickname %></td>
                <td><%= user.student_id %></td>
                <td>
                  <%= link_to 'view', course_user_path(course_id: params[:id], id: user.id) %>
                  <%= link_to 'edit', edit_course_user_path(course_id: params[:id], id: user.id) %>
                  <%= link_to 'delete', course_user_path(course_id: params[:id], id: user.id), method: 'delete' %> | 
                  <%= link_to 'grade', grade_course_user_path(course_id: params[:id], id: user.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

