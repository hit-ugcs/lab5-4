<div class="row">
  <h1 class="text-center">Grading Sheet</h1>
</div>
<hr class="style-eight">

<div class="row">
  <div class="col-md-3">

    <div class="list-group">
      <a href="/courses/1/grade_configuration" class="list-group-item">
        1. Grade Configuration
      </a>
      <a href="/courses/1/grade_students" class="list-group-item  active">
        2. Grade Students
      </a>
      <a href="/courses/1/final_report" class="list-group-item">
        3. Final Report
      </a>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row">
      <%= link_to 'New Student', new_course_user_path(@course), class: 'btn btn-primary' %>
    </div>
    <hr>
    <div class="row">
      <% if @user_info %>
        <ul>
          <% @user_info.each do |user| %>
            <li>name: <%= link_to user.name, edit_course_user_path(course_id: params[:id], id: user.id) %> nickname: <%= user.nickname %> student id: <%= user.student_id %> <%= link_to 'delete', course_user_path(course_id: params[:id], id: user.id), method: 'delete' %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>

