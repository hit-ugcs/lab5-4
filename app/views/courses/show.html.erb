<div class="row">
  <h1 class="text-center">Grading Sheet</h1>
</div>
<hr class="style-eight">

<div class="row">
  <div class="col-md-3">
    <%= render partial: 'nav.html.erb' %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <%= link_to 'New Item', new_course_node_path(@course), class: 'btn btn-primary' %>
    </div>
    <hr>
    <div class="row">
      <% if @sheet_info %>
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>#</th>
            <th>Item Nane</th>
            <th>Weight</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @sheet_info.each_with_index do |sheet, index| %>
            <tr>
            <td><%= index %></td>
            <td><%= link_to sheet.name, edit_course_node_path(course_id: sheet.course_id, id: sheet.id) %></td>
            <td><%= sheet.weight %></td>
            <td>
              <%= link_to 'view', course_node_path(course_id: sheet.course_id, id: sheet.id) %>
              <%= link_to 'edit', edit_course_node_path(course_id: sheet.course_id, id: sheet.id) %>
              <%= link_to 'delete', course_node_path(course_id: sheet.course_id, id: sheet.id), method: 'delete' %></td>
            </tr>
          <% end %>
      <% end %>
    </div>

  </div>
</div>

