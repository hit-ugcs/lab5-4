<div class="row">
  <h1 class="text-center">Student Information</h1>
</div>
<hr class="style-eight">

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Name</th>
          <th>Nickname</th>
          <th>Student ID</th>
          <th>Email</th>
          <th>Phone</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.nickname %></td>
          <td><%= @user.student_id %></td>
          <td><%= @user.email %></td>
          <td><%= @user.phone %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to 'Edit', edit_course_user_path(course_id: params[:course_id], id: params[:id]), class: 'btn btn-primary' %>
    <%= link_to 'Delete', course_user_path(course_id: params[:course_id], id: params[:id]), method: 'delete', class: 'btn btn-danger' %>
    <%= link_to 'Back', grade_students_course_path(id: params[:course_id]), class: 'btn btn-primary' %>
  </div>
</div>